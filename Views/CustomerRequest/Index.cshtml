@model IEnumerable<CustomerRequest>

@{
    ViewData["Title"] = "Lista zapytań klientów";
}

<div class="container mt-4">
    <h2>📋 Lista zapytań klientów</h2>
    <a asp-action="Create" class="btn btn-success mb-3">➕ Dodaj nowe zapytanie</a>
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary mb-3">🏠 Powrót do strony głównej</a>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>📛 Imię</th>
                <th>📧 Email</th>
                <th>📝 Wiadomość</th>
                <th>📅 Data</th>
                <th>⚙ Akcje</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var request in Model)
            {
                <tr>
                    <td>@request.Name</td>
                    <td>@request.Email</td>
                    <td>@request.Message</td>
                    <td>@request.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@request.Id" class="btn btn-warning">✏ Edytuj</a>
                        <a asp-action="Delete" asp-route-id="@request.Id" class="btn btn-danger">🗑 Usuń</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
